<div class="container list-title">
  <h2><%= @list.name %></h2>
</div>

<div class="create-button">
  <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: "btn btn-success" %>
</div>

<div class="container">
  <div class="card-columns">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="card">
      <div class="card-bookmark">
        <%= image_tag bookmark.movie.poster_url %>
        <div class="card-bookmark-infos">
          <div class="movie-title">
            <h4><%= bookmark.movie.title %></h4>
          </div>
          <div class="bookmark-comment">
            <p><%= bookmark.comment %></p>
          </div>
          <div class="remove-bookmark">
            <%= link_to 'Remove bookmark', bookmark_path(bookmark), data: { confirm: "Are you sure?" }, :method => :delete %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
