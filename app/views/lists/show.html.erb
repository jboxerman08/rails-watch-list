<div class="container list-title">
  <h2><%= @list.name %></h2>
</div>


<div class="container">
  <div class="rows">
    <div class="card-columns">
      <% @list.bookmarks.each do |bookmark| %>
      <div class="card">
        <div class="card-bookmark">
          <%= image_tag bookmark.movie.poster_url %>
          <div class="card-bookmark-infos">
            <h2><%= bookmark.movie.title %></h2>
            <p><%= bookmark.comment %></p>
            <%= link_to 'Remove this bookmark', bookmark_path(bookmark), data: { confirm: "Are you sure?" }, :method => :delete %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container show-page-links">
  <%= link_to 'Add a movie', new_list_bookmark_path(@list) %>
  <%= link_to 'Back to home', lists_path %>
</div>

