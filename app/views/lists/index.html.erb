<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('http://images.unsplash.com/photo-1485095329183-d0797cdc5676?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2900&q=80')";>
  <div class="container banner-title">
    <h1>MovieList</h1>
    <h4>Create now, watch later</h4>
  </div>
</div>

<div class="container">
  <div class="list-title">
    <h2>My Lists</h2>
  </div>

  <div class="create-button">
    <%= link_to "Create a New List", "/lists/new", class: "btn btn-success" %>
  </div>

  <div class="card-columns">
    <% @lists.each do |list| %>
      <div class="card" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : asset_path('default_list_background.jpg') %>)">
        <div class="card-title"><h3><%= link_to list.name, list_path(list) %></h3></div>
      </div>
    <% end %>
  </div>
</div>
